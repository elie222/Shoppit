<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="il.ac.huji.shoppit"
    android:versionCode="1"
    android:versionName="1.0" >

    <uses-sdk
        android:minSdkVersion="14"
        android:targetSdkVersion="18" />

    <uses-feature android:name="android.hardware.camera" />
    <uses-feature android:name="android.hardware.camera.autofocus" />
    <uses-feature
        android:glEsVersion="0x00020000"
        android:required="true" />

    <uses-permission android:name="android.permission.CAMERA" />
    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE" />
    <uses-permission android:name="android.permission.ACCESS_FINE_LOCATION" />
    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE" />
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />
    <uses-permission android:name="com.google.android.providers.gsf.permission.READ_GSERVICES" />
    <!--
     The following two permissions are not required to use
     Google Maps Android API v2, but are recommended.
    -->
    <uses-permission android:name="android.permission.ACCESS_COARSE_LOCATION" />
    <uses-permission android:name="android.permission.ACCESS_FINE_LOCATION" />

    <application
        android:allowBackup="true"
        android:icon="@drawable/ic_launcher_shoppit"
        android:label="@string/app_name"
        android:theme="@style/Theme.AppCompat.Light" >
        <activity
            android:name="il.ac.huji.shoppit.MainActivity"
            android:label="@string/app_name"
            android:theme="@style/Theme.AppCompat.Light" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name="il.ac.huji.shoppit.TakePictureActivity"
            android:label="@string/take_pic"
            android:theme="@style/Theme.AppCompat.Light" >
        </activity>
        <activity
            android:name="il.ac.huji.shoppit.AddItemActivity"
            android:label="@string/item_info"
            android:theme="@style/Theme.AppCompat.Light" >
        </activity>
        <activity
            android:name="il.ac.huji.shoppit.LoginActivity"
            android:label="@string/logIn"
            android:theme="@style/Theme.AppCompat.Light" >
        </activity>
        <activity
            android:name="il.ac.huji.shoppit.InfoActivity"
            android:label="@string/user_info"
            android:theme="@style/Theme.AppCompat.Light" >
        </activity>
        <activity
            android:name="il.ac.huji.shoppit.SearchableActivity"
            android:label="@string/title_activity_search" >
            <intent-filter>
                <action android:name="android.intent.action.SEARCH" />
            </intent-filter>

            <!-- Points to searchable meta data. -->
            <meta-data
                android:name="android.app.searchable"
                android:resource="@xml/searchable" />
        </activity>
        <activity
            android:name="il.ac.huji.shoppit.ItemActivity"
            android:label="@string/title_activity_item" >
        </activity>
        <activity
            android:name="il.ac.huji.shoppit.ShopActivity"
            android:label="@string/title_activity_shop" >
        </activity>

        <meta-data
            android:name="com.google.android.maps.v2.API_KEY"
            android:value="AIzaSyD8p3gJkRUxHK9Wxe8q2mfM_1dAJBwUmks" />

        <activity
            android:name="il.ac.huji.shoppit.NewShopActivity"
            android:label="@string/title_activity_new_item" >
        </activity>
    </application>

</manifest>