<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="il.ac.huji.shoppit"
    android:versionCode="1"
    android:versionName="1.0" >

    <uses-sdk
        android:minSdkVersion="11"
        android:targetSdkVersion="18" />

    <uses-feature android:name="android.hardware.camera" />
    <uses-feature android:name="android.hardware.camera.autofocus" />

    <uses-permission android:name="android.permission.CAMERA" />
    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE" />

    <application
        android:allowBackup="true"
        android:icon="@drawable/ic_launcher"
        android:label="@string/app_name"
        android:theme="@style/AppTheme" >
        <activity
            android:name="il.ac.huji.shoppit.MainActivity"
            android:label="@string/app_name" >
        </activity>
        <activity
            android:name="il.ac.huji.shoppit.SearchActivity"
            android:label="@string/search" >
        </activity>
        <activity
            android:name="il.ac.huji.shoppit.TakePictureActivity"
            android:label="@string/search" >
        </activity>
        <activity
            android:name="il.ac.huji.shoppit.MainActivityNew"
            android:label="@string/title_activity_main_activity_new"
            android:theme="@style/Theme.AppCompat.Light" >
            
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name="il.ac.huji.shoppit.ParseTableActivity"
            android:label="@string/title_activity_parse_table" >
        </activity>
    </application>

</manifest>